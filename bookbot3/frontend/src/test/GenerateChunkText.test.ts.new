import { describe, it, expect, vi, beforeEach } from 'vitest'
import { mount } from '@vue/test-utils'
import { createPinia, setActivePinia } from 'pinia'
import GenerateChunkText from '@/components/GenerateChunkText.vue'
import { useBookStore } from '@/stores/book'
import { apiService } from '@/services/api'

// Mock the API service
vi.mock('@/services/api', () => ({
  apiService: {
    getChunks: vi.fn(),
    createJob: vi.fn(),
    getJob: vi.fn(),
  }
}))

// Mock vue-router
vi.mock('vue-router', () => ({
  useRoute: () => ({
    params: {
      bookId: '1',
      chunkId: '1'
    }
  }),
  useRouter: () => ({
    push: vi.fn()
  })
}))

describe('GenerateChunkText', () => {
  let wrapper: any
  let bookStore: any

  const mockChunk = {
    chunk_id: '1',
    book_id: '1',
    type: 'scene',
    chapter: 1,
    order: 1,
    word_count: 100,
    version: 1,
    is_locked: false,
    is_deleted: false,
    is_latest: true,
    text: 'Original scene content',
    props: {
      name: 'Test Scene',
      scene_title: 'Opening Scene'
    },
    created_at: '2023-01-01T00:00:00Z',
    updated_at: '2023-01-01T00:00:00Z'
  }

  beforeEach(() => {
    setActivePinia(createPinia())
    bookStore = useBookStore()
    
    // Mock API responses
    vi.mocked(apiService.createJob).mockResolvedValue({
      job_id: 'job-123',
      book_id: '1',
      job_type: 'generate_text',
      state: 'waiting',
      created_at: new Date().toISOString()
    })

    wrapper = mount(GenerateChunkText, {
      props: {
        chunkId: '1',
        bookId: '1'
      },
      global: {
        plugins: [createPinia()],
      }
    })
  })

  describe('Component Rendering', () => {
    it('renders correctly', () => {
      expect(wrapper.exists()).toBe(true)
    })

    it('accepts required props', () => {
      expect(wrapper.props('chunkId')).toBe('1')
      expect(wrapper.props('bookId')).toBe('1')
    })
  })

  describe('Text Generation', () => {
    it('handles generation request', async () => {
      // Component should handle generation without throwing errors
      expect(wrapper.vm).toBeDefined()
    })

    it('handles API errors gracefully', async () => {
      const error = new Error('Generation failed')
      vi.mocked(apiService.createJob).mockRejectedValue(error)

      // Component should still render even with API errors
      expect(wrapper.exists()).toBe(true)
    })
  })
})
